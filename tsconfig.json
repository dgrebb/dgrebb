// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2015",
    "module": "nodenext",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "resolveJsonModule": true
  },
  "include": [
    "src/*"
  ]
}